<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ZUMA</title>

    <link rel="stylesheet" href="css/style.css">

    <link rel="shortcut icon" href="#"/>

    <script src="js/external/socket.io.js"></script>
    <script src="js/external/tone.js"></script>
</head>
<body>
<div class="main-container">
    <div class="screen-container">
        <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
             enable-background="new 0 0 800 300" xml:space="preserve">
            <filter id="innershadow">
                <feGaussianBlur in="SourceAlpha" stdDeviation="3" result="blur"></feGaussianBlur>
                <feOffset dy="2" dx="3"></feOffset>
                <feComposite in2="SourceAlpha" operator="arithmetic" k2="-1" k3="1" result="shadowDiff"></feComposite>

                <feFlood flood-color="#444444" flood-opacity="0.75"></feFlood>
                <feComposite in2="shadowDiff" operator="in"></feComposite>
                <feComposite in2="SourceGraphic" operator="over" result="firstfilter"></feComposite>

                <feGaussianBlur in="firstfilter" stdDeviation="3" result="blur2"></feGaussianBlur>
                <feOffset dy="-2" dx="-3"></feOffset>
                <feComposite in2="firstfilter" operator="arithmetic" k2="-1" k3="1" result="shadowDiff"></feComposite>

                <feFlood flood-color="#444444" flood-opacity="0.75"></feFlood>
                <feComposite in2="shadowDiff" operator="in"></feComposite>
                <feComposite in2="firstfilter" operator="over"></feComposite>
            </filter>

            <path/>
	    </svg>

        <canvas></canvas>

        <div class="end">
            <div class="mouth top"></div>
            <div class="mouth bottom"></div>
        </div>

        <div class="score-container">
            Score: <span>0</span>
        </div>
    </div>
</div>

<div class="menu-container layout-container">
    <span class="button back" onclick="previousMenu()">&#8678;</span>
    <div>
        <h1>Zuma</h1>

        <ul></ul>
    </div>
</div>

<div class="map-container layout-container">
    <div class="design-container">
        <div class="map"></div>

        <div class="list">
            <div class="form">
                <input type="text" placeholder="Map Name" class="map-name">

                <div class="player-form">
                    <div class="title">Player Position</div>
                    <div class="input-container">
                        <input type="text" id="player-design-x" placeholder="x" value="0" onkeyup="setPlayerPosition()">
                        <input type="text" id="player-design-y" placeholder="y" value="0" onkeyup="setPlayerPosition()">
                    </div>
                </div>

                <div class="list-form"></div>

                <div class="button-container">
                    <button onclick="addPath()">+ Path</button>
                    <button onclick="saveMap()">Save</button>
                </div>
            </div>

            <div class="sidebar-container active">
                <button onclick="exitMap()">BACK</button>

                <div class="list-container">

                </div>
            </div>
        </div>
    </div>
</div>

<div class=" game-over-container layout-container">
    <div>
        <h1></h1>
        <button onclick="restart()">Main Menu</button>
    </div>
</div>

<div class="create-room-container room-container layout-container">
    <div>
        <div class="loader"></div>
        <div class="map-list">
            <div class="list-container"></div>
        </div>
        <h1 class="map-not-available">No Map Available Yet</h1>
        <input type="text" placeholder="Player Name" class="player-name">
        <h1 class="room-id"></h1>
        <button onclick="hideRoomLayout('create')">Cancel</button>
    </div>
</div>

<div class="join-room-container room-container layout-container">
    <div>
        <input type="text" placeholder="Player Name" class="player-name">
        <div class="input-container">
            <input type="text" class="join-room-id" id="join-room-id">
            <label for="join-room-id">Room ID</label>
        </div>
        <div class="error-text"></div>
        <button onclick="joinRoom()">Join</button>
        <button onclick="hideRoomLayout('join')">Cancel</button>
    </div>
</div>

<div class="countdown-container layout-container">
    <div>
        <h1></h1>
    </div>
</div>

<script src="js/menu.js"></script>
<script src="js/main.js"></script>
<script src="js/update.js"></script>
<script src="js/player.js"></script>
<script src="js/ball.js"></script>
<script src="js/helper.js"></script>
<script src="js/generate.js"></script>
<script src="js/window.js"></script>
<script src="js/check.js"></script>
<script src="js/particle.js"></script>
<script src="js/score.js"></script>
<script src="js/sound.js"></script>

<script src="js/socket.js"></script>
</body>
</html>
